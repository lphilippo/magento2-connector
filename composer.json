
{
    "name": "lphilippo/magento2-connector",
    "description": "Package to ease connections with Magento2.",
    "license": "MIT",
    "authors": [
        {
            "name": "Leander Philippo"
        }
    ],
    "require": {
        "php": ">=7.1",
        "guzzlehttp/promises": "^1.4",
        "guzzlehttp/guzzle": "^6.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "LPhilippo\\Magento2Connector\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --colors=always"
    },
    "minimum-stability": "stable"
}
